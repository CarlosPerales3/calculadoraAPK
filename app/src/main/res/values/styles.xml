<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CalculatorButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/casiwhite</item>
    </style>

    <style name="CalculatorButton.Operation" parent="CalculatorButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/yellow</item>
    </style>

    <style name="CalculatorButton.Equal" parent="CalculatorButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/perri</item>
    </style>

</resources>